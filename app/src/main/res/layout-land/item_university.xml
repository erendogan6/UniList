<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="3dp"
    android:background="#C7E9F8"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="25dp"
            android:id="@+id/expandIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/expand_icon"
            android:contentDescription="@string/expand_icon" />

        <TextView
            android:id="@+id/universityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:fontFamily="@font/poppins_italic"
            android:text="Marmara Ãœniversitesi"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/favorite_icon"
            android:src="@drawable/unfavorite_icon"
            android:layout_marginEnd="15dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/favorite_icon" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#B936D8F1"
            android:visibility="gone"
            android:padding="16dp">

            <TextView
                android:id="@+id/universityPhone"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/phone_icon" />

            <TextView
                android:id="@+id/universityFax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/fax_icon" />

            <TextView
                android:id="@+id/universityWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:tooltipText="Web sitesini ziyaret et"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/web_icon" />

            <TextView
                android:id="@+id/universityAdress"
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/address_icon" />

            <TextView
                android:id="@+id/universityRector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center_vertical"
                android:textSize="19sp"
                app:drawableStartCompat="@drawable/person_icon" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:background="#7E7A9DFF"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

</LinearLayout>
