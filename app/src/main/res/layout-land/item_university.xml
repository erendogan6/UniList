<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/expandIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/expand_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/universityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="start" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#A8E1F5FE"
                android:visibility="gone"
                android:padding="16dp">

                <TextView
                    android:id="@+id/universityPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    app:drawableStartCompat="@drawable/phone_icon" />

                <TextView
                    android:id="@+id/universityFax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/fax_icon" />

                <TextView
                    android:id="@+id/universityWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/web_icon" />

                <TextView
                    android:id="@+id/universityAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/address_icon" />

                <TextView
                    android:id="@+id/universityRector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/person_icon" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
